{
  "name": "codefetch-sdk",
  "version": "1.5.3-alpha.0",
  "description": "Core SDK for codefetch functionality",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regenrek/codefetch.git"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./worker": {
      "worker": "./dist-worker/worker.mjs",
      "types": "./dist-worker/worker.d.mts",
      "default": "./dist-worker/worker.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist",
    "dist-worker"
  ],
  "scripts": {
    "build": "unbuild",
    "build:worker": "unbuild --config build.worker.config.ts",
    "build:all": "npm run build && npm run build:worker",
    "test": "npm run lint && npm run test:types && vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run test/demo-github.test.ts",
    "test:watch": "vitest watch",
    "test:types": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --cache . && prettier -c 'src/**/*' 'test/**/*'",
    "lint:fix": "eslint --cache . --fix && prettier -c 'src/**/*' 'test/**/*' -w",
    "prepublishOnly": "npm run build:all"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "c12": "^2.0.1",
    "consola": "^3.3.3",
    "defu": "^6.1.4",
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.0",
    "js-tiktoken": "^1.0.16",
    "pathe": "^2.0.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "eslint": "^9.18.0",
    "eslint-config-unjs": "^0.4.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "unbuild": "^3.5.0",
    "vitest": "^2.1.8"
  }
}
